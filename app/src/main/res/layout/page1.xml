        <!-- 天气状况 -->
        <TextView
            android:id="@+id/climate2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/temperaturemon2"
            android:layout_marginLeft="5dip"
            android:singleLine="true"
            android:text="多云转晴"
            android:textColor="@android:color/white"
            android:textSize="20.0sp" />
        <!-- 风力信息 -->
        <TextView
            android:id="@+id/wind2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/climate2"
            android:layout_marginLeft="5dip"
            android:singleLine="true"
            android:text="微风"
            android:textColor="@android:color/white"
            android:textSize="20.0sp" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/day3"
        android:layout_width="140dip"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/day2">
        <ImageView
            android:id="@+id/weather_img3"
            android:layout_width="wrap_content"
